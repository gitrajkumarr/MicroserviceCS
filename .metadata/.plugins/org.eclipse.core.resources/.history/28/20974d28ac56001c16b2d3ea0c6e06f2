package com.casestudy.bookservice.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;

import com.casestudy.bookservice.Repositary.BookServiceRepo;
import com.casestudy.bookservice.bean.Book;

@RestController

public class BookServiceController {
	
	@Autowired
	BookServiceRepo  bookServiceRepo;
	
	@GetMapping("/books")
	public Book getBooks() {
		return (Book) bookServiceRepo.findAll();
	}

}
